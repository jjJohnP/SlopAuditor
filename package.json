{
  "name": "slop-auditor",
  "version": "0.1.0",
  "description": "Slop orchestration framework with security auditor pipeline",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "visualizer": "tsx src/serve-visualizer.ts",
    "cli": "tsx src/cli.ts",
    "full": "concurrently \"npm start\" \"npm run visualizer\"",
    "test": "node --test dist/**/*.test.js"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  }
}
